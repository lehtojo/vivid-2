{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"command": "Vivid",
			"args": [
				"${workspaceFolder}",
				"${workspaceFolder}/entries/vivid.v",
				"-a",
				"-f",
				"-o",
				"vc",
				"-l",
				"kernel32",
				"-l",
				"v",
				"-d"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Tests",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"command": "Vivid",
			"args": [
				"${workspaceFolder}",
				"${workspaceFolder}/entries/tests.v",
				"${workspaceFolder}/tests/assert.v",
				"-a",
				"-f",
				"-o",
				"vc",
				"-l",
				"kernel32",
				"-l",
				"v",
				"-d"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}